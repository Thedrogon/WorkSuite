generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Employee {
  id        String      @id @default(uuid())
  email     String      @unique
  name      String
  team_id  String
  designation String
  salary  Float
  DOB    DateTime
  role   Role
  type  Type
}

model Project {
  id        String      @id @default(uuid())
  name      String
  client   String
  status   ProjectStatus
  teams    Team[]
  startDate DateTime
  endDate   DateTime
}

model Team {
  id        String      @id @default(uuid())
  projectId String
  project   Project     @relation(fields: [projectId], references: [id])
}


enum ProjectStatus {
  COMPLETED
  ONGOING
}

enum Type {
  ACTIVE
  BENCHED
  TERMINATED
}

enum Isactive {
  true
  false
}

enum Role {
  ENGINEER
  HR
  MANAGER
}
